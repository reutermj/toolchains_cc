#!/bin/bash
set -euox pipefail
source ${SCRIPTS_DIR}/environment

ZLIB_BUILD="/tmp/zlib-build"
mkdir -p ${ZLIB_BUILD}
cd ${ZLIB_BUILD}

env CFLAGS="-O3 -pipe -I${BUILD_TOOLS}/include" \
    LDFLAGS="-L${BUILD_TOOLS}/lib" \
    CHOST=x86_64-linux-gnu \
    ${ZLIB_SOURCE}/configure \
        --prefix=${BUILD_TOOLS} \
        --static
        
make -j$(nproc) -l
make install
