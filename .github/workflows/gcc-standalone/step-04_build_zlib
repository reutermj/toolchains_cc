#!/bin/bash
source ${SCRIPTS_DIR}/environment

pushd "${ZLIB_DIR}"

env CFLAGS="-O2 -g -pipe -I${BUILD_TOOLS}/include" \
    LDFLAGS="-L${BUILD_TOOLS}/lib" \
    CHOST="x86_64-build_pc-linux-gnu" \
    ./configure \
        --prefix="${BUILD_TOOLS}" \
        --static

make -j$(nproc) -l
make install

popd
